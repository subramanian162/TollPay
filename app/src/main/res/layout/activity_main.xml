<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3b6cff"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/layoutshape"
        android:padding="45dp"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/login" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Select One"
            android:textStyle="italic"
            android:textColor="#3b6cff"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="19dp"
            android:textSize="32dp" />


        <info.hoang8f.widget.FButton
            android:id="@+id/user_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User"
            app:buttonColor="#3b6cff"
            android:textColor="#FFF"
            android:textStyle="italic"
            android:textSize="24sp"
            android:textAppearance="@style/Animation.AppCompat.Dialog"
            android:onClick="user"
            />
        <info.hoang8f.widget.FButton
            android:id="@+id/client_btn"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client"
            app:buttonColor="#3b6cff"
            android:textColor="#FFF"
            android:textStyle="italic"
            android:textSize="24sp"
            android:textAppearance="@style/Animation.AppCompat.Dialog"
            android:onClick="client"
            />


    </LinearLayout>
</RelativeLayout>


